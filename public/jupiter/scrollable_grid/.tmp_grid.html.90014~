<body>
	<div id='grid'></div>
	
	
	<script type='text/ejs' id='rowEjs'>
		<td><%= id %></td>
		<td><%= assetTitle %></td>
		<td><%= assetCollectionTitle %></td>
		<td><%= type %></td>
	</script>
	<script type='text/javascript' 
            src='../../steal/steal.js'>   
    </script>
	<script type='text/javascript'>
		steal.plugins('jquery/dom/fixture', 'clui/grid').then(function(){
		
		//want this as simple as possible
		//provide it titles and 
		// table contents
			var params = new Mxui.Data({limit : 30})
			
			$.Model('Asset')
			$.fixture.make('asset', 1000, function(i){
				var names = ["monkey", "cheeta", "bear", "dog", "cat", "hippo", "pony"],
					types = ["audio", "video", "image", "flash"];
				return {
					id: 12345678+i,
					type: types[i%4],
					assetCollectionTitle : "Baby Panda "+i,
					assetTitle: "Baby "+names[i%7]+" "+i
				}
			})
			
			$("#grid").clui_grid({
				model : Asset,
				params : params,
				columns: {
					id: "Geyser Id",
					assetTitle: "Available Assets",
					assetCollectionTitle: "Collection",
					type: "Media Type"
				},
				row : "rowEjs"
			})
		}).start();
	</script>
</body>
